<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigationHeader_profileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profile_pic"/>

    <TextView
        android:id="@+id/navigationHeader_profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@id/navigationHeader_profileImage"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/navigationHeader_profileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        android:textColor="@color/light_grey"
        android:layout_below="@id/navigationHeader_profileName"
        android:layout_marginStart="16dp"/>

    <View
        android:layout_below="@id/navigationHeader_profileUsername"
        android:layout_width="match_parent"
        style="@style/line"/>
</RelativeLayout>